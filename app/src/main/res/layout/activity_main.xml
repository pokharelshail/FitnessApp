<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenteam"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/trackR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="171dp"
        android:text="TrackR"
        android:textColor="#004A4C"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/logInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trackR"
        android:layout_alignParentStart="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="43dp"
        android:text="Login to your Account"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/eTEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logInText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/rounded_et"
        android:ems="10"
        android:hint="john@email.com"
        android:inputType="textEmailAddress"
        android:textColorHint="#D1CECE" />

    <EditText
        android:id="@+id/eTPassword"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_et"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#D1CECE" />

    <TextView
        android:id="@+id/dontHaveAnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="13dp"
        android:text="Don't have an account?"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_marginStart="7dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/dontHaveAnAccount"
        android:text="Sign Up"
        android:textColor="#004A4C"
        android:textStyle="bold" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTPassword"
        android:layout_alignParentStart="true"
        android:layout_marginStart="164dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="#004A4C"
        android:text="Login" />
</RelativeLayout>